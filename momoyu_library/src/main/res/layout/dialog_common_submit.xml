<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_255"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_dialog_ios"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_16"
    >


    <TextView
        android:id="@+id/dialog_exception_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:textColor="#333"
        android:textSize="@dimen/sp_17"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#d6d7d8"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"/>

    <ImageView
        android:id="@+id/dialog_warning_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/selector_warning_icon"
        android:layout_marginTop="@dimen/dp_12"/>


    <TextView
        android:id="@+id/dialog_exception_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_horizontal"
        android:textColor="#282828"
        android:textSize="@dimen/sp_16"
        android:lines="2"
        />


    <TextView
        android:id="@+id/dialog_exception_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="我知道了"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#1390fe"
        android:textSize="@dimen/sp_13"

        android:visibility="invisible"/>

</LinearLayout>