<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_ios"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_40"
    android:layout_marginRight="@dimen/dp_40"
    >


        <TextView
            android:id="@+id/dialog_iosStyle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#333"
            android:textSize="@dimen/sp_17"
            android:layout_marginTop="@dimen/dp_22"
            />


        <TextView
            android:id="@+id/dialog_iosStyle_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#d6d7d8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <TextView
                android:id="@+id/dialog_iosStyle_cancle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="取消"
                android:textSize="@dimen/sp_17"
                android:textColor="#1390fe"
                android:gravity="center"
                />

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="#d6d7d8"/>

            <TextView
                android:id="@+id/dialog_iosStyle_affirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="确认"
                android:textSize="@dimen/sp_17"
                android:textColor="#1390fe"
                android:gravity="center"/>
        </LinearLayout>



</LinearLayout>